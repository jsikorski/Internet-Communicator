<Window x:Class="Client.Features.Login.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource SmallWindowStyle}">

    <StackPanel Orientation="Vertical"
                Margin="10">
        <Label Content="Numer:" />
        <TextBox Text="{Binding Number, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 PreviewTextInput="NumberTextBoxPreviewInput" />

        <Label Content="Password:" />
        <TextBox Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <Button Name="Login"
                Content="Login"
                Margin="0, 15, 0, 0" />
        <Button Name="Register"
                Content="Register"
                Margin="0, 10, 0, 0" />
    </StackPanel>

</Window>
